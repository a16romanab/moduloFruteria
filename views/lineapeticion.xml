<odoo>
    <record id="view_lineapeticion_tree" model="ir.ui.view">
        <field name="name">Peticiones</field>
        <field name="model">fruteria.lineapeticion</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre_fruta"/> 
                <field name="kilos"/>
                <field name="importe"/>        
            </tree>
        </field>
    </record>

    <record id="view_lineapeticion_form" model="ir.ui.view">
        <field name="name">Peticiones</field>
        <field name="model">fruteria.lineapeticion</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="id_fruta"/>
                    <field name="nombre_fruta"/> 
                    <field name="kilos"/>
                    <field name="importe"/>
                </group>
                 
            </form>
        </field>
    </record>
</odoo>